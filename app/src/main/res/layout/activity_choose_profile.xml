<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profiles.ProfileActivity">

    <Button
            android:text="Profile 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile1"
            android:onClick="sendMessage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="296dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

    <Button
            android:text="Profile 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="296dp"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@+id/profile1" />

    <Button
            android:text="Profile 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="296dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/profile2" />
</androidx.constraintlayout.widget.ConstraintLayout>