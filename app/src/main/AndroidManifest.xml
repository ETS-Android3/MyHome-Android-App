<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myhome" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyHome"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".activities.items.ItemsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.rooms.RoomActivity"
            android:exported="true" />
        <activity
            android:name=".activities.rooms.RoomsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.kitchen.MealsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.kitchen.ShoppingListsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.kitchen.RecipesActivity"
            android:exported="true" />
        <activity
            android:name=".activities.kitchen.FridgeActivity"
            android:exported="true" />
        <activity
            android:name=".activities.kitchen.KitchenActivity"
            android:exported="true" />
        <activity
            android:name=".activities.account.LegalInfoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.account.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.account.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.account.MembersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.account.RegisterActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>